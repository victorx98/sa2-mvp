{
  "name": "sa2-mvp",
  "version": "0.0.1",
  "description": "NestJS backend service with DDD pattern",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "NODE_OPTIONS='--dns-result-order=ipv4first' nest start",
    "start:dev": "NODE_OPTIONS='--dns-result-order=ipv4first' nest start --watch",
    "start:debug": "NODE_OPTIONS='--dns-result-order=ipv4first' nest start --debug --watch",
    "start:prod": "NODE_OPTIONS='--dns-result-order=ipv4first' node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "NODE_OPTIONS='--dns-result-order=ipv4first' jest --runInBand",
    "test:watch": "NODE_OPTIONS='--dns-result-order=ipv4first' jest --watch",
    "test:cov": "NODE_OPTIONS='--dns-result-order=ipv4first' jest --coverage --runInBand",
    "test:debug": "NODE_OPTIONS='--dns-result-order=ipv4first' node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "NODE_OPTIONS='--dns-result-order=ipv4first' jest --config ./test/jest-e2e.json",
    "db:generate": "NODE_OPTIONS='--dns-result-order=ipv4first' drizzle-kit generate",
    "db:migrate": "ts-node scripts/migrate.ts",
    "db:migrate:drizzle": "NODE_OPTIONS='--dns-result-order=ipv4first' drizzle-kit migrate",
    "db:push": "NODE_OPTIONS='--dns-result-order=ipv4first' drizzle-kit push",
    "db:studio": "NODE_OPTIONS='--dns-result-order=ipv4first' drizzle-kit studio"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/schedule": "^6.0.1",
    "axios": "^1.13.2",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "drizzle-orm": "^0.44.7",
    "nodemailer": "^7.0.10",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/nodemailer": "^7.0.3",
    "@types/passport-jwt": "^4.0.0",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.7",
    "drizzle-kit": "^0.31.6",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "globals": "^16.5.0",
    "jest": "^29.5.0",
    "jiti": "^2.6.1",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3",
    "typescript-eslint": "^8.46.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@domains/(.*)$": "<rootDir>/domains/$1",
      "^@application/(.*)$": "<rootDir>/application/$1",
      "^@infrastructure/(.*)$": "<rootDir>/infrastructure/$1",
      "^@api/(.*)$": "<rootDir>/api/$1",
      "^@shared/(.*)$": "<rootDir>/shared/$1"
    }
  }
}
