# Application
NODE_ENV=development
PORT=3000

# Database (Supabase)
DATABASE_URL=postgresql://user:password@host:port/database
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Supabase Auth Service Timeout (milliseconds)
# Default: 30000 (30 seconds)
# Increase this value if you experience timeout errors in slow network environments
# Example for local development with Docker: 60000
SUPABASE_AUTH_TIMEOUT=30000

# JWT Authentication
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# API Rate Limiting (optional)
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# Logging
LOG_LEVEL=debug

# OpenTelemetry (Observability)
# Enable/disable telemetry across ALL environments (development and production)
# Set to 'false' to disable telemetry completely
# If not set, defaults to enabled when OTEL_EXPORTER_OTLP_ENDPOINT is configured
OTEL_ENABLED=true

# Service identification
# SERVICE_NAME is optional - defaults to package.json name if not set
SERVICE_NAME=mentorx-backend
OTEL_SERVICE_VERSION=0.0.1

# OpenTelemetry SDK log level (DEBUG, INFO, WARN, ERROR)
OTEL_LOG_LEVEL=INFO

# OTLP Exporter Configuration
# Option 1: Use unified endpoint for all signals (traces, metrics, logs)
OTEL_EXPORTER_OTLP_ENDPOINT=https://your-otlp-collector:4318
OTEL_EXPORTER_OTLP_AUTH_TOKEN=base64-encoded-credentials

# Option 2: Use separate endpoints for each signal (optional, overrides unified endpoint)
# OTEL_EXPORTER_OTLP_TRACES_ENDPOINT=https://traces-endpoint:4318/v1/traces
# OTEL_EXPORTER_OTLP_METRICS_ENDPOINT=https://metrics-endpoint:4318/v1/metrics
# OTEL_EXPORTER_OTLP_LOGS_ENDPOINT=https://logs-endpoint:4318/v1/logs

# Optional: External Services
# EMAIL_SERVICE_API_KEY=
# SMS_SERVICE_API_KEY=
# STORAGE_BUCKET_NAME=
